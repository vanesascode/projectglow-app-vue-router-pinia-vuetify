{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "ES2016.Array.Include"],
    "types": ["vuetify"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.vue",
    "env.d.ts",
    "vite.config.ts",
    "configuration.json"
  ]
}
